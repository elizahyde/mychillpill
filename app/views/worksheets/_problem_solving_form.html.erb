<%= simple_form_for @worksheet do |f| %>
  <%= f.label "When is it?" %>
  <%= f.date_field :date %>
  <%= f.input :text_answer1, label: "What is the problem or worry?" %>
  <%= f.input :text_answer2, label: "Brainstorm potential solutions" %>
  <%= f.input :text_answer3, label: "Advantages of this solution?" %>
  <%= f.input :text_answer4, label: "Disadvantages of this solution?" %>
  <%= f.input :text_answer5, label: "Pick the best solution (or the least-worst)" %>
  <%= f.input :text_answer6, label: "What steps do you need to take to put this solution into action?" %>
  <%= f.hidden_field :name, :value => "problem_solving" %>
  <%= f.submit "Save Worksheet", class: "button" %>
  <% end %>