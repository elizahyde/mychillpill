<%= form_for(@worksheet, html: {"data-abide" => ""}) do |f| %>
  <%= f.label "When was it?" %>
  <%= f.date_field :date %>

  <%= f.label :text_answer1, "Where were you? What were you doing? Who were you with??" %>
  <%= f.text_area :text_answer1, :required => "" %>

  <%= f.label :text_answer2, "What emotions did you have? Rate the percentage" %>
  <%= f.text_area :text_answer2, :required => "" %>

  <%= f.label :text_answer3, "Negative automatic thoughts. What thoughts were going through your mind?" %>
  <%= f.text_area :text_answer3, :required => "" %>

  <%= f.label :text_answer4, "Evidence that supports the thought. What supports the truthfulness of this thought or image?" %>
  <%= f.text_area :text_answer4, :required => "" %>

  <%= f.label :text_answer5, "Evidence that does not support the thought. What experiences indicate that this thought is not completely true all of the time? If my best friend had this thought what would I tell them?" %>
  <%= f.text_area :text_answer5, :required => "" %>

  <%= f.label :text_answer6, "Alternative thought. Write a new thought which takes into account the evidence for and against the original thought." %>
  <%= f.text_area :text_answer6, :required => "" %>

  <%= f.label :text_answer7, "How do you feel about the situation now? What emotions do you have and at what percentages?" %>
  <%= f.text_area :text_answer7, :required => "" %>

  <%= f.hidden_field :name, :value => "thought_record" %>
  <%= f.submit "Save Worksheet", class: "button" %>
  <% end %>