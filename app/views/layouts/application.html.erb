<!DOCTYPE html>
<html>
<head>
  <title>MyChillPill</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width" />
  <link href='http://fonts.googleapis.com/css?family=Fredoka+One|Karla:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">MyChillPill</a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
    </ul>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if user_signed_in? %>
              <li><a href="/users/edit" data-reveal-id="myModal" data-reveal-ajax="true">Edit Settings</a></li>
              <li id="logout"> <%= link_to "Logout", destroy_user_session_path, method: :delete %> </li>
          </ul>
        </li>
      </ul>
      <!-- Left Nav Section -->
      <ul class="left">
        <li><a href="/drawings">Draw</a></li>
        <li><a href="/writings">Write</a></li>
        <li><a href="/worksheets">Worksheets</a></li>
        <li><a href="/users/dashboard">Dashboard</a></li>
        <% else %>
        <li><a href="/users/sign_in" data-reveal-id="myModal" data-reveal-ajax="true">Sign In</a></li>
        <li><a href="/users/sign_up" data-reveal-id="myModal" data-reveal-ajax="true">Sign Up</a></li><br><br>
      </ul>
      <% end %>
    </section>
  </nav>
  <div class="row">
    <div class="large-8 columns">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
  <div id="myModal" class="reveal-modal" data-reveal></div>
<script>
  $(document).foundation();
</script>
</body>
</html>
